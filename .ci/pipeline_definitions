        - linux/arm64
        dockerimages:
          service-account-issuer-discovery:
            image: europe-docker.pkg.dev/gardener-project/snapshots/gardener/service-account-issuer-discovery
            dockerfile: Dockerfile
            tag_template: ${EFFECTIVE_VERSION}
            tag_as_latest: false
    steps:
      verify:
        image: 'golang:1.23.3'
  jobs:
    head-update:
      traits:
        draft_release: ~
        publish:
          dockerimages:
            service-account-issuer-discovery:
              tag_as_latest: true
          helmcharts:
          - *service-account-issuer-discovery
    pull-request:
      traits:
        pull-request: ~
        publish:
          helmcharts:
          - *service-account-issuer-discovery
    release:
      traits:
        version:
          preprocess: finalize
        release:
          nextversion: bump_minor
          assets:
          - type: build-step-log
            step_name: verify
            purposes:
