service-account-issuer-discovery:
  template: default
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: inject-commit-hash
      publish:
        oci-builder: docker-buildx
        platforms:
        - linux/amd64
        - linux/arm64
        dockerimages:
          service-account-issuer-discovery:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/service-account-issuer-discovery'
            dockerfile: Dockerfile
            tag_template: ${EFFECTIVE_VERSION}
            tag_as_latest: false
    steps:
      verify:
        image: 'golang:1.21.3'
  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
        publish:
          dockerimages:
            service-account-issuer-discovery:
              tag_as_latest: true
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: finalize
        release:
          nextversion: bump_minor
        component_descriptor: ~
        publish:
          dockerimages:
            service-account-issuer-discovery:
              tag_as_latest: false
